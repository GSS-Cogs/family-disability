pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Transform') {
            agent {
                docker {
                    image 'cloudfluff/databaker'
                    reuseNode true
                }
            }
            steps {
                    def cmd = 'python -c "print(\'hello\')"'
                    def proc = cmd.execute()
                    proc.waitFor()
                    println "return code: ${ proc.exitValue()}"
                    println "stderr: ${proc.err.text}"
                    println "stdout: ${proc.in.text}"
            }
        }
  
    }
    
}

