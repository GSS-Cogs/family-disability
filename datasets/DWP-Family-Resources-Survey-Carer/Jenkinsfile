pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Transform') {
            agent {
                docker {
                    image 'cloudfluff/databaker'
                    reuseNode true
                }
            }
            steps {
                    def sout = new StringBuffer(), serr = new StringBuffer()
                    def proc ='../DWP-Family-Resources-Survey-Carer/main.py'.execute()
                    def b = new StringBuffer()
                    proc.consumeProcessErrorStream(b)
                    println proc.text
                    println b.toString()
            }
        }
  
    }
    
}

